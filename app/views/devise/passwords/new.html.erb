<div class="container row">
  <div class="col s12 l6 offset-l3 card-panel">
    <div class="text-center separate">
      <%= image_tag "pin.png" %>
    </div>
    <div class="form-title">
      Password Reset
    </div>
    <div class="form-descrip gap">
      Enter the email you registered with to reset your password.
    </div>

    <div class="form-card">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="input-field">
          <%= f.label :email %>
          <%= f.text_field :email, autofocus: true %>
        </div>

        <div class="text-center">
          <%= f.submit "Send Me A Reset Link", class: "btn yellow darken-2 separate" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
